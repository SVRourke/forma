<h1><%= @survey.title %></h1>
<% if @inputs.length > 0 %>
    <% @inputs.each do |input| %>
        <p><%= input.input_type %>: <%= input.label %> <%= input.id %> delete</p>
        <%= button_to "Delete Image", { action: "destroy", id: input.id }, method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
<% else %>
    <p>Add an input!</p>
<% end %>

<h3>New Input</h3>
<%= form_for @newInput do |f| %>
    <%= f.label :type, "Input Type:" %><br>
    <%= f.select :input_type, @types %><br>

    <%= f.label :label, "Input Label:" %><br>
    <%= f.text_field :label %><br>  

    <%= f.label :name, "Input Name:" %><br>
    <%= f.text_field :name %>
    <br>

    <%= f.submit "Add Input" %>
<% end %>